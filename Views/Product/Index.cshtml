@model IEnumerable<Project.Models.Product>
@{
    ViewData["Title"] = "Art Gallery";
}

<div class="animate-fade-in px-6">
    
    <div class="gallery-hero mt-6">
        <div class="position-relative z-1">
            <span class="text-primary font-bold tracking-widest uppercase text-xs">The Collection</span>
            <h1 class="text-4xl md:text-6xl font-black mt-2 mb-6">Experience the<br/>Essence of Art</h1>
            <p class="text-slate-400 leading-relaxed text-lg max-w-2xl">
                Discover a global stage where nationality and gender fade, leaving only the pure expression of the soul. From exclusive auctions to curated fixed-price masterpieces.
            </p>
        </div>
    </div>

    
    <div class="max-w-7xl mx-auto flex justify-end mb-8 px-4">
        <div class="glass px-6 py-3 rounded-2xl border border-[var(--glass-border)] text-sm font-bold tracking-tight">
            <span class="text-primary mr-2">@Model.Count()</span> Artworks Found
        </div>
    </div>

    
    <div class="shop-container" style="padding-top: 0;">
        
        <aside class="shop-sidebar">
            <div class="filter-box">
                <h4 class="mb-6 font-bold tracking-tight">Find Artworks</h4>
                
                <form asp-controller="Product" asp-action="Index" method="get">
                    
                    <div class="mb-4">
                        <label class="mb-2 text-muted" style="font-size: 0.85rem;">SEARCH</label>
                        <div class="search-input-group">
                            <i class="bi bi-search search-icon"></i>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control search-input" placeholder="Keyword..." />
                        </div>
                    </div>

                    
                    <div class="mb-4">
                        <label class="mb-2 text-muted" style="font-size: 0.85rem;">SORT BY</label>
                        <div class="position-relative">
                            <select name="sortOrder" class="form-control" style="background: rgba(255,255,255,0.03); color: #fff; border: 1px solid var(--glass-border);" onchange="this.form.submit()">
                                <option value="" selected="@(ViewData["CurrentSort"] == null)">Name (A-Z)</option>
                                <option value="name_desc" selected="@(ViewData["CurrentSort"] as string == "name_desc")">Name (Z-A)</option>
                                <option value="price_asc" selected="@(ViewData["CurrentSort"] as string == "price_asc")">Price (Low to High)</option>
                                <option value="price_desc" selected="@(ViewData["CurrentSort"] as string == "price_desc")">Price (High to Low)</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn-premium w-100">Apply Filters</button>
                    @if (ViewData["CurrentFilter"] != null || ViewData["CurrentSort"] != null)
                    {
                        <a asp-action="Index" class="btn btn-sm w-100 mt-2 text-muted" style="border: 1px solid var(--glass-border);">Clear Filters</a>
                    }
                </form>
            </div>
        </aside>

        
        <main class="shop-content">
            <div class="product-grid" style="padding: 0;">
                @if(Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="product-card">
                            <div class="product-image-container">
                                @if (!item.IsApproved)
                                {
                                    <div class="absolute top-4 left-4 z-10">
                                        <span class="px-3 py-1 bg-amber-500/90 text-white text-[10px] font-black uppercase rounded-lg shadow-lg">Pending Approval</span>
                                    </div>
                                }
                                @if(!string.IsNullOrEmpty(item.ImageUrl)) {
                                     <img src="@item.ImageUrl" alt="@item.Name" />
                                } else {
                                     <div class="w-full h-full bg-slate-900 flex items-center justify-center">
                                         <i class="bi bi-image text-4xl opacity-20"></i>
                                     </div>
                                }
                            </div>
                            <div class="p-6">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h3 class="product-title mb-0">@item.Name</h3>
                                    <div class="product-price">$@item.Price</div>
                                </div>
                                <p class="text-slate-500 text-sm line-clamp-2 mb-4">@item.Description</p>
                                
                                <div class="flex gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" target="_blank" class="btn-premium flex-1 text-center py-2 px-4 text-sm">
                                        <i class="bi bi-eye me-1"></i> View Details
                                    </a>
                                    @if (Context.Session.GetInt32("UserId") != null)
                                    {
                                        <a asp-controller="Wishlist" asp-action="AddToWishlist" asp-route-id="@item.Id" class="glass px-3 py-2 rounded-xl text-slate-400 hover:text-red-500 hover:border-red-500/50 transition-all">
                                            <i class="bi bi-heart"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-cart-state w-100">
                        <i class="bi bi-search empty-cart-icon"></i>
                        <h3 class="text-white">No artworks found</h3>
                        <p class="text-muted">Try adjusting your search or filters to find what you're looking for.</p>
                        <a asp-action="Index" class="btn-premium mt-4">Reset All Filters</a>
                    </div>
                }
            </div>
        </main>
    </div>
</div>
