<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Art Gallery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/premium.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        primary: 'var(--primary-color)',
                        secondary: 'var(--secondary-color)',
                        dark: 'var(--bg-primary)',
                        glass: 'var(--glass-bg)',
                        'light-bg': '#f3f4f6',
                    }
                }
            }
        }
    </script>
</head>
<body class="font-sans antialiased transition-colors duration-300 theme-@(Context.Session.GetString("Theme") ?? "dark") bg-[var(--bg-primary)] text-[var(--text-primary)] min-h-screen relative overflow-x-hidden" id="body-theme">
    
    <!-- Premium Background Container -->
    <div class="fixed inset-0 -z-10">
        <img src="/images/auth-bg.png" class="w-full h-full object-cover scale-110 blur-[2px] opacity-40" alt="Auth Background" />
        <div class="absolute inset-0 bg-gradient-to-br from-[var(--bg-primary)] via-[var(--bg-primary)]/80 to-[var(--bg-primary)]/40"></div>
        
        <!-- Decorative Glows -->
        <div class="absolute top-[-10%] right-[-10%] w-[50%] h-[50%] bg-[var(--primary-color)]/10 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-[-10%] left-[-10%] w-[50%] h-[50%] bg-[var(--secondary-color)]/10 rounded-full blur-[120px]"></div>
    </div>
    
    
    <main role="main" class="min-h-screen flex items-center justify-center p-6 relative z-10 w-full">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
