<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artist Studio</title>
    
    <!-- Artistic Typography -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                        display: ['Cinzel', 'serif']
                    },
                    colors: {
                        primary: 'var(--primary-color)',
                        secondary: 'var(--secondary-color)',
                        paper: '#fdfbf7',
                        ink: '#1a1a1a',
                        gold: '#d4af37'
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/premium.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #d4af37;
            --bg-primary: #0f0f0f;
            --glass-border: rgba(255, 255, 255, 0.1);
            --text-primary: #e5e5e5;
        }

        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
        }

        .artistic-nav-link {
            position: relative;
            font-family: 'Playfair Display', serif;
            letter-spacing: 0.05em;
            transition: all 0.4s ease;
        }
        
        .artistic-nav-link::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 50%;
            width: 0;
            height: 1px;
            background: var(--primary-color);
            transition: all 0.4s ease;
            transform: translateX(-50%);
        }

        .artistic-nav-link:hover::after, .artistic-nav-link.active::after {
            width: 100%;
        }

        .artistic-nav-link.active {
            color: var(--primary-color);
        }

        .brush-effect {
            mask-image: url('data:image/svg+xml;utf8,<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg"><path d="M43.7,-76.3C55.6,-68.8,63.1,-55.8,70.5,-43.3C78,-30.9,85.4,-19,86.2,-6.8C87,5.4,81.1,17.9,73.1,28.6C65.2,39.3,55.1,48.2,44.4,56.7C33.7,65.2,22.4,73.3,9.8,75.4C-2.8,77.5,-16.7,73.6,-28.9,67.6C-41.2,61.6,-51.7,53.5,-61.2,43.4C-70.8,33.3,-79.3,21.2,-81.2,8.2C-83.1,-4.8,-78.3,-18.8,-70.4,-30.8C-62.5,-42.8,-51.4,-52.8,-39.6,-60.4C-27.7,-68,-15.1,-73.2,-1.2,-71.1C12.7,-69,25.3,-59.6,43.7,-76.3Z" transform="translate(100 100)" /></svg>');
            mask-size: contain;
            mask-repeat: no-repeat;
            mask-position: center;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-[url('https://images.unsplash.com/photo-1542259681-d41029a24449?q=80&w=2070&auto=format&fit=crop')] bg-cover bg-fixed bg-center">
    <!-- Overlay for readability -->
    <div class="fixed inset-0 bg-black/80 backdrop-blur-sm z-0"></div>

    <div class="relative z-10 flex flex-col min-h-screen">
        <!-- Artistic Top Navigation -->
        <header class="h-24 px-12 flex items-center justify-between border-b border-[var(--glass-border)] bg-black/40 backdrop-blur-md">
            <div class="flex items-center gap-4">
                <a href="/Home/Index" class="font-display text-3xl text-white tracking-widest hover:text-[var(--primary-color)] transition-colors">
                    STUDIO
                </a>
            </div>

            <nav class="flex items-center gap-12">
                <a asp-controller="Artist" asp-action="Index" class="artistic-nav-link text-lg @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    Collection
                </a>
                <a asp-controller="Artist" asp-action="Upload" class="artistic-nav-link text-lg @(ViewContext.RouteData.Values["Action"]?.ToString() == "Upload" ? "active" : "")">
                    Create
                </a>
                <a asp-controller="Artist" asp-action="Ideas" class="artistic-nav-link text-lg flex items-center gap-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Ideas" ? "active" : "")">
                    Inspiration
                    <span class="text-[10px] bg-purple-500/20 text-purple-300 border border-purple-500/30 px-2 py-0.5 rounded text-xs font-sans tracking-wider">AI POWERED</span>
                </a>
            </nav>

            <div class="flex items-center gap-6">
                <div class="text-right hidden md:block">
                    <p class="font-serif text-sm text-[var(--text-primary)]">@Context.Session.GetString("Name")</p>
                    <p class="text-[10px] uppercase tracking-widest text-[var(--primary-color)]">Artist</p>
                </div>
                <div class="w-10 h-10 rounded-full border border-[var(--primary-color)] p-0.5 overflow-hidden">
                    <img src="@(Context.Session.GetString("Avatar") ?? "https://via.placeholder.com/150")" class="w-full h-full object-cover rounded-full" />
                </div>
                <a asp-controller="Home" asp-action="Index" class="ml-4 text-white/50 hover:text-white transition-colors" title="Exit Studio">
                    <i class="bi bi-box-arrow-right text-xl"></i>
                </a>
            </div>
        </header>

        <main class="flex-1 p-8 md:p-12 animate-fade-in overflow-y-auto">
             @if (TempData["Success"] != null)
            {
                <div class="mb-8 p-4 border-l-4 border-green-500 bg-green-500/10 text-green-400 font-serif italic flex items-center gap-3 max-w-2xl mx-auto">
                    <i class="bi bi-stars"></i>
                    @TempData["Success"]
                </div>
            }
            @RenderBody()
        </main>
        
        <footer class="py-6 text-center text-white/20 text-xs uppercase tracking-widest font-sans border-t border-[var(--glass-border)]">
            Art created with passion. Powered by Gallery Sanctuary.
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
