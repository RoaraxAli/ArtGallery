@model Project.Models.SetPasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    bool hasPassword = ViewBag.HasPassword ?? false;
}

<div class="pt-24 pb-12 px-4 min-h-screen bg-[var(--bg-color)]">
    <div class="max-w-2xl mx-auto glass p-8 animate-fade-in">
        <div class="border-b border-[var(--glass-border)] pb-6 mb-8">
            <h1 class="text-3xl font-bold text-primary tracking-tight">
                @(hasPassword ? "Change Password" : "Set Password")
            </h1>
            <p class="text-slate-400 mt-2">
                @if (hasPassword)
                {
                    <text>Update your account password</text>
                }
                else
                {
                    <text>Set a password to enable email/password login</text>
                }
            </p>
        </div>

        @if (!hasPassword)
        {
            <div class="mb-6 p-4 bg-blue-500/10 border border-blue-500/20 text-blue-400 rounded-lg text-sm">
                <i class="bi bi-info-circle mr-2"></i>
                You signed up with an OAuth provider (Google/Discord/GitHub). Setting a password will allow you to log in with both methods.
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-4 bg-green-500/10 border border-green-500/20 text-green-400 rounded-lg text-sm">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Info"] != null)
        {
            <div class="mb-6 p-4 bg-blue-500/10 border border-blue-500/20 text-blue-400 rounded-lg text-sm">
                @TempData["Info"]
            </div>
        }

        <form asp-action="ChangePassword" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            
            @if (hasPassword)
            {
                <div>
                    <label asp-for="OTP" class="block text-sm font-medium text-slate-400 mb-2">Verification Code (Check your email)</label>
                    <input asp-for="OTP" 
                           class="w-full bg-[var(--glass-bg)] border border-[var(--glass-border)] rounded-xl px-4 py-3 text-[var(--text-color)] focus:ring-2 focus:ring-primary/50 outline-none transition-all" 
                           placeholder="Enter 6-digit code" />
                    <span asp-validation-for="OTP" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-slate-400 mb-2"></label>
                    <input asp-for="CurrentPassword" 
                           class="w-full bg-[var(--glass-bg)] border border-[var(--glass-border)] rounded-xl px-4 py-3 text-[var(--text-color)] focus:ring-2 focus:ring-primary/50 outline-none transition-all" 
                           required />
                    <span asp-validation-for="CurrentPassword" class="text-red-400 text-sm mt-1 block"></span>
                </div>
            }

            <div>
                <label asp-for="NewPassword" class="block text-sm font-medium text-slate-400 mb-2"></label>
                <input asp-for="NewPassword" 
                       class="w-full bg-[var(--glass-bg)] border border-[var(--glass-border)] rounded-xl px-4 py-3 text-[var(--text-color)] focus:ring-2 focus:ring-primary/50 outline-none transition-all" 
                       required />
                <span asp-validation-for="NewPassword" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-slate-400 mb-2"></label>
                <input asp-for="ConfirmPassword" 
                       class="w-full bg-[var(--glass-bg)] border border-[var(--glass-border)] rounded-xl px-4 py-3 text-[var(--text-color)] focus:ring-2 focus:ring-primary/50 outline-none transition-all" 
                       required />
                <span asp-validation-for="ConfirmPassword" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-primary hover:bg-primary/90 text-white font-bold py-3 rounded-xl shadow-lg shadow-primary/30 transition-all transform hover:-translate-y-0.5 active:scale-[0.98]">
                    @(hasPassword ? "Change Password" : "Set Password")
                </button>
                <a asp-action="Settings" class="flex-1 bg-[var(--glass-bg)] hover:bg-[var(--glass-bg)]/80 text-slate-300 font-bold py-3 rounded-xl border border-[var(--glass-border)] transition-all text-center flex items-center justify-center">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
