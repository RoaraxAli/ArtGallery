@model Project.Models.Product
@{
    ViewData["Title"] = "Add Artwork";
}

<div class="glass p-5 animate-fade-in" style="max-width: 600px; margin: 0 auto;">
    <h2 class="mb-4">Add New Artwork</h2>
    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="image">Artwork Image</label>
            <input type="file" name="image" class="form-control" accept="image/*" />
        </div>
        <div class="mb-3">
            <label for="Name">Artwork Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter artwork name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label for="Price">Price (or Starting Bid)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div class="mb-4 p-3 rounded-xl border border-[var(--glass-border)] bg-black/20">
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="isAuctionCheck" name="IsAuction" value="true" onchange="toggleAuctionDates()">
                <label class="form-check-label" for="isAuctionCheck">List as Auction</label>
                
                <input type="hidden" name="IsAuction" value="false" />
            </div>
            
            <div id="auctionFields" class="hidden transition-all duration-300">
                <label for="AuctionEndTime">Auction End Time</label>
                <input asp-for="AuctionEndTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="AuctionEndTime" class="text-danger"></span>
            </div>
        </div>

        <script>
            function toggleAuctionDates() {
                var isChecked = document.getElementById('isAuctionCheck').checked;
                var fields = document.getElementById('auctionFields');
                if (isChecked) {
                    fields.classList.remove('hidden');
                } else {
                    fields.classList.add('hidden');
                }
            }
        </script>
        <div class="d-flex justify-content-between">
            <a asp-action="Products" style="color: #ccc; align-self: center;">Cancel</a>
            <button type="submit" class="btn-premium">Create Artwork</button>
        </div>
    </form>
</div>
