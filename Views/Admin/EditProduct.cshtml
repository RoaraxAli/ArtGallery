@model Project.Models.Product
@{
    ViewData["Title"] = "Edit Artwork";
}

<div class="glass p-5 animate-fade-in" style="max-width: 600px; margin: 0 auto;">
    <h2 class="mb-4">Edit Artwork</h2>
    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="mb-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Current Image" style="max-height: 150px; border-radius: 8px; border: 1px solid var(--glass-border);" />
            }
        </div>
        <div class="mb-3">
            <label for="image">Change Image (Optional)</label>
            <input type="file" name="image" class="form-control" accept="image/*" />
        </div>
        <div class="mb-3">
            <label for="Name">Artwork Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label for="Price">Price (or Starting Bid)</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-4 p-3 rounded-xl border border-[var(--glass-border)] bg-black/20">
            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="editIsAuctionCheck" name="IsAuction" value="true" @(Model.IsAuction ? "checked" : "") onchange="toggleEditAuctionDates()">
                <label class="form-check-label" for="editIsAuctionCheck">List as Auction</label>
                <input type="hidden" name="IsAuction" value="false" />
            </div>
            
            <div id="editAuctionFields" class="hidden transition-all duration-300">
                <label for="AuctionEndTime">Auction End Time</label>
                <input asp-for="AuctionEndTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="AuctionEndTime" class="text-danger"></span>
                @if(Model.IsAuction) {
                    <div class="mt-2 text-xs text-[var(--text-secondary)]">
                        Current Highest Bid: <span class="text-primary font-bold">$@(Model.CurrentBid ?? 0)</span> (@Model.BidCount bids behavior)
                    </div>
                }
            </div>
        </div>

        <script>
            function toggleEditAuctionDates() {
                var isChecked = document.getElementById('editIsAuctionCheck').checked;
                var fields = document.getElementById('editAuctionFields');
                if (isChecked) {
                    fields.classList.remove('hidden');
                } else {
                    fields.classList.add('hidden');
                }
            }

            document.addEventListener('DOMContentLoaded', function() {
                toggleEditAuctionDates();
            });
        </script>
        <div class="d-flex justify-content-between">
            <a asp-action="Products" style="color: #ccc; align-self: center;">Cancel</a>
            <button type="submit" class="btn-premium">Save Changes</button>
        </div>
    </form>
</div>
