@model List<Project.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="flex justify-between items-center mb-8 animate-fade-in">
    <div>
        <h1 class="text-3xl font-bold text-white">Manage Orders</h1>
        <p class="text-[var(--text-secondary)] mt-1">Track and process all customer orders.</p>
    </div>
    <div class="flex gap-2">
        <button class="px-4 py-2 rounded-xl bg-[var(--bg-surface-2)] border border-[var(--glass-border)] text-sm font-bold text-[var(--text-secondary)] hover:text-white transition-colors">
            <i class="bi bi-funnel"></i> Filter
        </button>
        <button class="px-4 py-2 rounded-xl bg-[var(--bg-surface-2)] border border-[var(--glass-border)] text-sm font-bold text-[var(--text-secondary)] hover:text-white transition-colors">
            <i class="bi bi-download"></i> Export
        </button>
    </div>
</div>

<div class="glass rounded-3xl border border-[var(--glass-border)] overflow-hidden animate-slide-down">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="text-xs text-[var(--text-secondary)] uppercase bg-[var(--bg-surface-2)]">
                <tr>
                    <th class="px-6 py-4">Order ID</th>
                    <th class="px-6 py-4">Customer</th>
                    <th class="px-6 py-4">Date</th>
                    <th class="px-6 py-4">Amount</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[var(--glass-border)]">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-[var(--bg-surface-2)]/50 transition-colors">
                        <td class="px-6 py-4 font-mono text-[var(--text-secondary)]">#@item.Id</td>
                        <td class="px-6 py-4">
                            <div class="font-bold text-white">@item.CustomerName</div>
                            <div class="text-[10px] text-[var(--text-secondary)] uppercase tracking-wider truncate max-w-[200px]">@item.ShippingAddress</div>
                        </td>
                        <td class="px-6 py-4 text-[var(--text-secondary)]">@item.OrderDate.ToString("MMM dd, yyyy")</td>
                        <td class="px-6 py-4 font-bold text-white">$@item.TotalAmount.ToString("N0")</td>
                        <td class="px-6 py-4">
                            @{
                                var statusColor = "bg-gray-500/20 text-gray-400 border-gray-500/30";
                                if (item.Status == "Pending") statusColor = "bg-yellow-500/20 text-yellow-400 border-yellow-500/30";
                                if (item.Status == "Confirmed") statusColor = "bg-blue-500/20 text-blue-400 border-blue-500/30";
                                if (item.Status == "Shipped") statusColor = "bg-purple-500/20 text-purple-400 border-purple-500/30";
                                if (item.Status == "Delivered") statusColor = "bg-green-500/20 text-green-400 border-green-500/30";
                                if (item.Status == "Cancelled") statusColor = "bg-red-500/20 text-red-400 border-red-500/30";
                            }
                            <span class="inline-flex px-3 py-1 rounded-md border text-[10px] font-bold uppercase tracking-wider @statusColor">
                                @item.Status
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right">
                             <a asp-action="OrderDetails" asp-route-id="@item.Id" class="px-4 py-2 rounded-lg bg-[var(--primary-color)]/10 hover:bg-[var(--primary-color)] text-[var(--primary-color)] hover:text-white border border-[var(--primary-color)]/20 transition-all text-xs font-bold inline-flex items-center gap-2">
                                <i class="bi bi-eye-fill"></i> View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Paginator (Visual only for now) -->
    <div class="px-6 py-4 border-t border-[var(--glass-border)] flex items-center justify-between text-xs text-[var(--text-secondary)]">
        <span>Showing @Model.Count orders</span>
        <div class="flex gap-2">
            <button class="px-3 py-1 rounded-lg bg-[var(--bg-surface-2)] hover:bg-[var(--glass-border)] disabled:opacity-50" disabled>Previous</button>
            <button class="px-3 py-1 rounded-lg bg-[var(--bg-surface-2)] hover:bg-[var(--glass-border)] disabled:opacity-50" disabled>Next</button>
        </div>
    </div>
</div>
