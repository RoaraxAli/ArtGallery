@model Project.Models.Exhibition
@{
    ViewData["Title"] = "Add Exhibition";
    Layout = "_AdminLayout";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <h1 class="text-3xl font-bold">New Exhibition</h1>
        <p class="text-[var(--text-secondary)]">Create a listing for a physical art show.</p>
    </div>

    <form asp-action="AddExhibition" method="post" enctype="multipart/form-data" class="bg-[var(--bg-card)] p-8 rounded-3xl border border-[var(--glass-border)] space-y-6">
        <div>
            <label class="text-xs text-slate-500 uppercase font-bold tracking-widest mb-2 block">Exhibition Title</label>
            <input type="text" asp-for="Title" required class="w-full bg-[var(--bg-surface-1)] border border-[var(--glass-border)] rounded-xl px-4 py-3 focus:border-primary outline-none text-[var(--text-primary)]" placeholder="e.g. Modern Soul 2025" />
        </div>

        <div>
            <label class="text-xs text-slate-500 uppercase font-bold tracking-widest mb-2 block">Description</label>
            <textarea asp-for="Description" required rows="3" class="w-full bg-[var(--bg-surface-1)] border border-[var(--glass-border)] rounded-xl px-4 py-3 focus:border-primary outline-none text-[var(--text-primary)] resize-none" placeholder="Details about the theme, featured artists, etc."></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="text-xs text-slate-500 uppercase font-bold tracking-widest mb-2 block">Event Date</label>
                <input type="date" asp-for="Date" required class="w-full bg-[var(--bg-surface-1)] border border-[var(--glass-border)] rounded-xl px-4 py-3 focus:border-primary outline-none text-[var(--text-primary)]" />
            </div>
            <div>
                <label class="text-xs text-slate-500 uppercase font-bold tracking-widest mb-2 block">Location/Address</label>
                <input type="text" asp-for="Address" required class="w-full bg-[var(--bg-surface-1)] border border-[var(--glass-border)] rounded-xl px-4 py-3 focus:border-primary outline-none text-[var(--text-primary)]" placeholder="123 Art St, NYC" />
            </div>
        </div>

        <div>
            <label class="text-xs text-slate-500 uppercase font-bold tracking-widest mb-2 block">Banner Image</label>
            <input type="file" name="image" required accept="image/*" class="w-full bg-[var(--bg-surface-1)] border border-[var(--glass-border)] rounded-xl px-4 py-3 focus:border-primary outline-none text-[var(--text-primary)]" />
        </div>

        <div class="flex gap-4 pt-4">
            <button type="submit" class="flex-1 btn-premium py-4 font-bold rounded-xl">Create Listing</button>
            <a asp-action="Exhibitions" class="px-8 py-4 text-slate-500 hover:text-[var(--text-primary)] transition-colors font-bold">Cancel</a>
        </div>
    </form>
</div>
