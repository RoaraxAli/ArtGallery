@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_AuthLayout";
}

<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-green-50 to-white p-6">
    <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl p-10 text-center flex flex-col items-center">

        <h1 class="font-extrabold text-3xl mb-3 text-green-700">Password Reset Successful!</h1>
        <p class="text-gray-500 mb-8">Your password has been successfully updated. You can now login with your new password.</p>

        <a asp-action="Login" class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 rounded-xl shadow-md transition-all transform active:scale-95 text-center">
            Back to Login
        </a>
    </div>
</div>
