@model Project.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 to-white p-6">
    <div class="w-full max-w-md bg-white rounded-3xl shadow-2xl p-10 flex flex-col items-center">

        <h1 class="font-extrabold text-3xl mb-3 text-gray-800">Reset Password</h1>
        <p class="text-gray-500 mb-8 text-center">Enter your new password below to reset your account password.</p>

        @if (ViewBag.Message != null)
        {
            <div class="w-full bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6 text-center transition-all animate-fadeIn" role="alert">
                <span class="block">@ViewBag.Message</span>
            </div>
        }

        <form asp-action="ResetPassword" method="post" class="w-full flex flex-col gap-4">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div>
                <label asp-for="NewPassword" class="block font-medium mb-1">New Password</label>
                <input asp-for="NewPassword" type="password" class="w-full p-3 rounded-xl border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-400 outline-none transition-all" />
                <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block font-medium mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="w-full p-3 rounded-xl border border-gray-300 bg-gray-100 focus:ring-2 focus:ring-blue-400 outline-none transition-all" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 rounded-xl shadow-md transition-all transform active:scale-95">
                Reset Password
            </button>
        </form>

        <a asp-action="Login" class="mt-6 text-gray-500 text-sm hover:underline hover:text-gray-700 transition-colors">
            Back to Login
        </a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
