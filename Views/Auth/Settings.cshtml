@model Project.Models.User
@{
    ViewData["Title"] = "Account Settings";
}

<div class="pt-24 pb-12 px-4 min-h-screen bg-[var(--bg-color)]">
    <div class="max-w-2xl mx-auto glass p-8 animate-fade-in">
        <div class="border-b border-[var(--glass-border)] pb-6 mb-8 text-center">
            <h1 class="text-3xl font-bold text-primary tracking-tight">Account Settings</h1>
            <p class="text-slate-400 mt-2">Manage your profile information and appearance</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="mb-6 p-4 bg-green-500/10 border border-green-500/20 text-green-400 rounded-lg text-sm">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Settings" method="post" enctype="multipart/form-data" class="space-y-8">
            
            <div class="flex flex-col items-center">
                <div class="relative group">
                    <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-primary/20 shadow-2xl relative">
                        @if (!string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img id="avatarPreview" src="@Model.Avatar" class="w-full h-full object-cover transition-transform group-hover:scale-110" />
                        }
                        else
                        {
                            <div id="avatarPlaceholder" class="w-full h-full bg-primary flex items-center justify-center text-4xl font-bold text-white">
                                @Model.Name[0].ToString().ToUpper()
                            </div>
                            <img id="avatarPreview" src="#" class="w-full h-full object-cover hidden transition-transform group-hover:scale-110" />
                        }
                    </div>
                    <label for="avatarFile" class="absolute bottom-1 right-1 bg-primary text-white w-8 h-8 rounded-full flex items-center justify-center cursor-pointer shadow-lg hover:scale-110 transition-transform focus-within:ring-2 focus-within:ring-white">
                        <i class="bi bi-camera"></i>
                        <input type="file" id="avatarFile" name="avatarFile" class="sr-only" accept="image/*" onchange="previewImage(this)">
                    </label>
                </div>
                <p class="text-sm text-slate-500 mt-3">Click the camera to change avatar</p>
            </div>

            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-400 mb-2">Display Name</label>
                    <input type="text" name="name" value="@Model.Name" 
                           class="w-full bg-[var(--glass-bg)] border border-[var(--glass-border)] rounded-xl px-4 py-3 text-[var(--text-color)] focus:ring-2 focus:ring-primary/50 outline-none transition-all" 
                           required />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-slate-400 mb-2">Email Address</label>
                    <input type="email" value="@Model.Email" disabled 
                           class="w-full bg-[var(--glass-bg)] border border-[var(--glass-border)] rounded-xl px-4 py-3 text-slate-500 opacity-60 cursor-not-allowed outline-none" />
                    <p class="text-[10px] text-slate-500 mt-1 italic">Email cannot be changed as it is linked to your account.</p>
                </div>
            </div>

            <div class="pt-4">
                <button type="submit" class="w-full bg-primary hover:bg-primary/90 text-white font-bold py-3 rounded-xl shadow-lg shadow-primary/30 transition-all transform hover:-translate-y-0.5 active:scale-[0.98]">
                    Save Profile Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var preview = document.getElementById('avatarPreview');
                    var placeholder = document.getElementById('avatarPlaceholder');
                    
                    preview.src = e.target.result;
                    preview.classList.remove('hidden');
                    if (placeholder) placeholder.classList.add('hidden');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
