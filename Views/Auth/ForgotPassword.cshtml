@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div class="flex items-center justify-center min-h-screen bg-[var(--bg-primary)] p-6 transition-colors duration-300">
    <div class="glass relative w-full max-w-md p-10 flex flex-col items-center animate-fade-in">

        <h1 class="font-extrabold text-4xl mb-3 text-[var(--text-primary)]">Forgot Password?</h1>
        <p class="text-[var(--text-secondary)] mb-8 text-center">Enter your email and we'll send you instructions to reset your password.</p>

        @if (ViewBag.Message != null)
        {
            <div class="w-full bg-green-500/20 border border-green-500/30 text-green-400 px-4 py-3 rounded-lg mb-6 text-center transition-all animate-fadeIn" role="alert">
                <span class="block sm:inline">@ViewBag.Message</span>
            </div>
        }

        <form asp-action="ForgotPassword" method="post" class="w-full flex flex-col gap-4">
            <input type="email"
                   name="email"
                   placeholder="Enter your email"
                   class="bg-[var(--bg-surface-1)] text-[var(--text-primary)] placeholder-[var(--text-secondary)] border border-[var(--glass-border)] px-4 py-3 rounded-xl outline-none focus:ring-2 focus:ring-primary transition-all shadow-inner"
                   required />

            <button type="submit"
                    class="w-full btn-premium py-3 rounded-xl shadow-lg shadow-primary/20 text-lg font-bold">
                Send Reset Link
            </button>
        </form>

        <a asp-action="Login" class="mt-6 text-[var(--text-secondary)] text-sm hover:text-[var(--text-primary)] transition-colors hover:underline">
            Back to Sign In
        </a>
    </div>
</div>
